<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/record"
        />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_toRightOf="@id/recordButton"
        />

    <TextView
        android:id="@+id/countTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recordButton"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:text="Large Text" />

    <TextView
        android:id="@+id/initialDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:text="Large Text" />


    <TextView
        android:id="@+id/previousDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/initialDateTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:text="Large Text" />
</RelativeLayout>
